<h2>Usuários</h2>

<table mat-table [dataSource]="dataSource" class="mat-elevation-z8" matSort>

        <!--- Note that these columns can be defined in any order.
              The actual rendered columns are set as a property on the row definition" -->

        <!-- Position Column -->
        <ng-container matColumnDef="id">
          <th mat-header-cell *matHeaderCellDef> <span class="cellItem">
          		<button mat-icon-button (click)="doAdd()">
                 <mat-icon color="primary">add</mat-icon>                 
              </button>
              

          </span> </th>
          <td mat-cell *matCellDef="let element"> 
              <button mat-icon-button aria-label="Editar cliente" color="primary" (click)="doOpen(element)">
                <mat-icon>create</mat-icon>                
              </button>
              <button mat-icon-button (click)="doDelete(element)">
                 <mat-icon style="color: red">delete</mat-icon>                 
              </button>
          </td>
        </ng-container>      
       

        <!-- Position Column -->
        <ng-container matColumnDef="usuario">
          <th mat-header-cell *matHeaderCellDef> <span class="cellItem">Usuário</span> </th>
          <td mat-cell *matCellDef="let element"> <span class="cellItem">{{element.usuario}}</span> </td>
        </ng-container>

        <ng-container matColumnDef="dataLogin">
          <th mat-header-cell *matHeaderCellDef> <span class="cellItem">Data Login</span> </th>
          <td mat-cell *matCellDef="let element"> <span class="cellItem">{{element.dataLogin | date: 'dd/MM/yyyy HH:mm'}}</span> </td>
        </ng-container>

         <ng-container matColumnDef="ip">
          <th mat-header-cell *matHeaderCellDef> <span class="cellItem">IP</span> </th>
          <td mat-cell *matCellDef="let element"> 
          	<span class="cellItem">
          		{{element.ip}}
          	</span> </td>
        </ng-container>

         <ng-container matColumnDef="tipo">
          <th mat-header-cell *matHeaderCellDef> <span class="cellItem">Tipo</span> </th>
          <td mat-cell *matCellDef="let element"> 
          	<span class="cellItem">
          		<span *ngIf="element.tipo==0">Administrador</span>	
          		<span *ngIf="element.tipo==1">Operador</span>	
          	</span> </td>
        </ng-container>

          

       

        <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
        <tr mat-row *matRowDef="let row; columns: displayedColumns;"></tr>
</table>

<mat-paginator></mat-paginator>
